<h1>TOP</h1>

<p><%= flash[:msg]%></p>
<%= link_to '書籍一覧を表示する',books_path %>

<table>
	<th>タイトル</th><th>貸出日</th><th>返却期日</th><th>返却日</th><th></th>
	<% @book_record.each do|record| %>
		<tr <% if record.expire? %>style = "color:red;"<% end %>>
			<td><%= record.book_title %></td>
			<td><%= record.lend_date %></td>
			<td><%= record.ex_return_date %></td>
			<td><%= record.return_date %></td>
			<td><% if record.return_book? %><%= link_to '返却',book_book_record_path(record.book_id,record.id) ,method: :patch,data: {confirm: '返却してもいいですか？'} %><% end %></td>
		</tr>
	<% end %>
</table>