<h1>書籍一覧</h1>

<table>
<th>タイトル</th><th>著者</th><th>出版社</th><th></th>
<% @books.each do|book| %>
<tr>
  <td><%= book.name %></td>
  <td><%= book.author %></td>
  <td><%= book.company%></td>
  <td><%= link_to '詳細', book_path(book.id)%></td>
  <td><%= link_to '編集',edit_book_path(book.id)%></td>
  <td><%= link_to '削除',book_path(book.id), method: :delete,data: {confirm: '本当に消去しますか？'} %></td>
  </tr>
  <% end %>
</table>

<%= link_to '新規登録',new_book_path %>
